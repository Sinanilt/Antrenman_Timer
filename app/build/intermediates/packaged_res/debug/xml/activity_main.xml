<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editSetCount"
        android:hint="Toplam Set Sayısı"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editRestPerSet"
        android:hint="Set Arası Dinlenme (dk)"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editRestAfterAllSets"
        android:hint="Tüm Setlerden Sonra Dinlenme (dk)"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnStartWorkout"
        android:text="Antrenmana Başla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/timerTextView"
        android:text="00:00"
        android:textSize="48sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp" />

    <Button
        android:id="@+id/btnNextSet"
        android:text="Seti Bitirdim / Dinlenmeye Başla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false" />
</LinearLayout>
